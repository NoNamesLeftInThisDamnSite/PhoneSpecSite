@using PhoneSpecSite.Data
@model IEnumerable<PhoneCompany>

@{
    ViewData["Title"] = "List of PhoneCategory";
}

<div class="row">
    <div class="col-md-8 offset-md-2">

        <table class="table">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.Logo)</th>
                    <th>@Html.DisplayNameFor(model => model.CompanyName)</th>
                    <th>@Html.DisplayNameFor(model => model.CompanyDescription)</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class= "align-middle">
                            <img class="rounded-circle" src= "@item.Logo" alt="@item.CompanyName" style="max-width: 150px"/>
                        </td>
                        <td class= "align-middle">
                            @Html.DisplayFor(modelItem => item.CompanyName)
                        </td>
                        <td class= "align-middle">
                             @Html.DisplayFor(modelItem => item.CompanyDescription)
                        </td>
                        <td class= "align-middle">
                            @if(User.Identity.IsAuthenticated && User.IsInRole("Admin"))
                            {
                                <a class="btn btn-outline-primary"  asp-action="Edit" asp-route-id="@item.Id" ><i class="bi bi-pencil-square"></i>Edit </a>
                                  <a class="btn btn-danger text-white"  asp-action="Delete" asp-route-id="@item.Id"> <i class= "bi bi-trash"></i> Delete</a>
                            }
                             <a class="btn btn-outline-info"  asp-action="Details" asp-route-id="@item.Id"><i class="bi bi-eye"></i>Details </a>
                            
                        </td>
                    </tr>

                }
                 
            </tbody>
            
        </table>

    </div>
  
</div>


 @if(User.Identity.IsAuthenticated && User.IsInRole("Admin"))
{
    <div style="position: fixed; right: 25px;" class="text-white">
                 <a asp-controller="PhoneCompany" asp-action="Create" class="btn btn-success"> <i class="bi bi-plus-circle"></i> Add New Company</a>
                 </div>
}

